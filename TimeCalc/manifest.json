{
  "manifest_version": 2,
  "name": "Time Calculator",
  "version": "0.0.1",
  "description": "Calculate your time easy...",
  "background": {
      "scripts": [
          "background.js"
      ],
      "persistent": false
  },
  "icons": {
      "16": "./icons/icon-16x16.png",
      "36": "./icons/icon-36x36.png",
      "48": "./icons/icon-48x48.png",
      "120": "./icons/icon-120x120.png"
  },
  "browser_action": {
    "default_icon": {                
        "16": "./icons/icon-16x16.png",     
        "24": "./icons/icon-36x36.png",     
        "48": "./icons/icon-48x48.png"      
      }
  },
  "permissions": [
      "tabs",
      "activeTab"
  ]
}